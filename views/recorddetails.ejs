<body>
    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/allcountries">All Countries</a>
            <a href="/myrecords"> My Records</a>
        </nav>
    </header>
    <main>

        <%Country.forEach(country => { %>
            <div>
            <ul> 
                <li><p> country:  <%=country.country%> </p></li>
                <li><p>total confirmed cases :<%=country.totalconfirmedcases%></p></li>
                <li><p>total deaths cases :<%=country.totaldeathscases%></p></li>
                <li><p>total recovered cases :<%=country.totalrecoveredcases  %></p></li>
                <li><p>date :<%=country.date  %></p></li>
            </ul>
            </div>
            <form action="/recorddetails/<%=country.id%>?method=delete" method="post">
                <button>Delete</button>
            </form>
            <%       });  %> 

    </main>
    <footer>
        <h4>All Rights Reserved 2020</h4>
    </footer>
</body>
